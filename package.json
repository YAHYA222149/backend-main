      "*.test.js"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "watch": [
      "server.js",
      "config/",
      "controllers/",
      "middleware/",
      "models/",
      "routes/",
      "utils/"
